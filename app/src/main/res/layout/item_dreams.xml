<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/dateDream"
        style="@style/CustomSplashScreenTittle.Label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:text="JAN 31 2022"
        android:textAlignment="center" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/line_color"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/type"
                style="@style/CustomSplashScreenTittle.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="Simple" />

            <TextView
                android:id="@+id/titleDreams"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title - my dreams's name"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descriptionDreams"
                style="@style/CustomSplashScreenTittle.Label"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Description Dreams text text text text text text"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/moodDream"
                style="@style/MyImageView"
                android:layout_marginStart="-3dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/badenable" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>