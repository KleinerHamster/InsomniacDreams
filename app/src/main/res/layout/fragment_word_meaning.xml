<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/back"
            android:id="@+id/back_to_search"/>

        <TextView
            android:text="@string/search_back"
            style="@style/MyCustomTextView" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_margin="25dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/line_color"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="WORD"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="24sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/text_color">
            </LinearLayout>

            <TextView
                android:id="@+id/meaning_word"
                style="@style/MyCustomTextView"
                android:text="Text text text text text text text text text text text text text text..."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>