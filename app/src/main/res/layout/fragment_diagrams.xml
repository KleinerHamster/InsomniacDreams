<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Диаграмма с видами сна-->
        <androidx.cardview.widget.CardView
            style="@style/MyCard">

            <TextView
                style="@style/CustomSplashScreenTittle.Diagram"
                android:text="@string/types_of_dream_di"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_type_of_dream"
                style="@style/MyBarChart"
                android:layout_height="215dp" />



        </androidx.cardview.widget.CardView>

        <!--Диаграмма настроения-->
        <androidx.cardview.widget.CardView
            style="@style/MyCard">

            <TextView
                style="@style/CustomSplashScreenTittle.Diagram"
                android:text="@string/mood_di"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_mood"
                style="@style/MyBarChart"
                android:layout_height="223dp" />

        </androidx.cardview.widget.CardView>

        <!--Диаграмма время сна-->
        <androidx.cardview.widget.CardView
            style="@style/MyCard">

            <TextView
                style="@style/CustomSplashScreenTittle.Diagram"
                android:text="@string/sleep_time"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_time_sleep"
                style="@style/MyBarChart"
                android:layout_height="215dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
